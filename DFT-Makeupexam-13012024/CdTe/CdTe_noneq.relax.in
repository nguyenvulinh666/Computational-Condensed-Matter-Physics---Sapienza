&CONTROL
   calculation = 'relax'
   restart_mode = 'from_scratch'
   prefix = 'CdTe'
   tstress = .true.
   tprnfor = .true.
   pseudo_dir = './PSEUDO'
   outdir = './tmp'
&end
&SYSTEM
   ibrav = 2
   nat = 2
   ntyp = 2
