
&CONTROL
  calculation = 'scf'
  restart_mode = 'from_scratch'
  outdir = './tmp'
  pseudo_dir = './PSEUDO'
  prefix = 'si.fcc${ks}'
  tstress = .true.
  tprnfor = .true.
/
&SYSTEM
  ibrav = 2
  celldm(1) = 10.28
  nat = 1
  ntyp = 1
  ecutwfc = $ECUT
  occupations = 'smearing', smearing='gauss', degauss=0.04
/
&ELECTRONS
  conv_thr = 1.0e-6
/
ATOMIC_SPECIES
  Si 28.0855 Si.LDA.upf
ATOMIC_POSITIONS 
  Si  0.00   0.00 0.00
K_POINTS automatic
  $ks $ks $ks 0 0 0
